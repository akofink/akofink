<h1>Login</h1>

<%= form_for :session, url: '/sessions', method: 'post', role: 'form' do |f| %>
  <div class='form-group'>
    <%= f.label :username,
      hidden: true %>
    <%= f.text_field :username,
      placeholder: 'username',
      class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :password,
      hidden: true %>
    <%= f.password_field :password,
      placeholder: 'password',
      class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.submit 'Login', class: 'btn' %>
  </div>
<% end %>
