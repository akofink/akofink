<h1>Media</h1>

<%= form_for @new_medium do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content %><br>

  <%= f.submit 'Post' %>
<% end %>

<ul>
  <% Medium.all.reverse.each do |medium_post| %>
    <li>
    <h2>
      <%= link_to '#', "##{medium_post.id}", name: medium_post.id %>
      <%= medium_post.title %>
    </h2>

    <%= raw @markdown.render(medium_post.content || '') %>
    <%= link_to 'Delete', "/media/#{medium_post.id}", method: :delete %><br>
    </li>
    <br>
  <% end %>
</ul>
