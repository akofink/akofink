<h1>Edit Blog Post</h1>

<div class= 'col-md-5'>
  <%= form_for @blog, class: 'form-horizontal', role: 'form' do |f| %>
    <div class='form-group'>
      <%= f.text_field :title,
        placeholder: 'Title',
        class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.text_area :content,
        placeholder: 'Markdown-parsed content',
        class: 'form-control',
        rows: 15
      %>
    </div>

    <div class='form-group'>
      <%= f.submit :update,
        class: 'btn'
      %>
    </div>
  <% end %>
</div>

<%#= render 'form', blog: @blog %>
